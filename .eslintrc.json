{
    "env": {
      "node": true
    },
    "plugins": [
        "import"
    ],
    "extends": "airbnb-base",
    "rules": {
      "max-len": 1,
      "no-use-before-define": 1,
      "no-param-reassign": [2, { "props": false}],
      "import/no-extraneous-dependencies": ["error", {
        "devDependencies": true
      }],
      "global-require": 1,
      "arrow-parens": [2, "as-needed"],
      "no-underscore-dangle": ["error", { "allow": ["_id"] }],
      "comma-dangle": 0,
      "no-plusplus": 0,
      "no-prototype-builtins": 0
    }
}
