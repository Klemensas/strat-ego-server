{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./build",
    "lib": [
        "es6",
        "es2017"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "build",
    "node_modules",
    "knexfile.*",
    "migrations"
  ]
}
