{
  "name": "ffe-server",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run build && -r dotenv/config node ./build/",
    "start:watch": "nodemon -e ts --exec npm run start",
    "build": "tsc",
    "test": "export NODE_ENV=test|| set NODE_ENV=test&& jest --runInBand",
    "test:ci": "export NODE_ENV=test|| set NODE_ENV=test&& npm run migrate && jest --coverage --forceExit",
    "dev": "nodemon -e ts --exec ts-node --project ./tsconfig.json -r dotenv/config ./src",
    "lint": "tslint ./src/**/*.ts",
    "seed": "ts-node ./seeds",
    "migrate": "npm run migrate:main && npm run migrate:world",
    "migrate:rollback": "npm run migrate:rollback:main && npm run migrate:rollback:world",
    "migrate:main": "knex migrate:latest --knexfile knexfile.main.js",
    "migrate:world": "knex migrate:latest --knexfile knexfile.world.js",
    "migrate:rollback:main": "knex migrate:rollback --knexfile knexfile.main.js",
    "migrate:rollback:world": "knex migrate:rollback --knexfile knexfile.world.js"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "restoreMocks": true,
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "cloudinary": "^1.11.0",
    "composable-middleware": "^0.3.0",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "errorhandler": "^1.4.3",
    "express": "^4.16.2",
    "express-jwt": "^5.3.0",
    "express-session": "^1.15.6",
    "jsonwebtoken": "^8.1.0",
    "knex": "^0.14.6",
    "method-override": "^2.3.10",
    "morgan": "^1.9.0",
    "node-schedule": "^1.2.5",
    "objection": "^1.1.5",
    "objection-db-errors": "^1.0.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.3.0",
    "seedrandom": "^2.4.3",
    "serve-favicon": "^2.4.5",
    "socket.io": "^2.0.4",
    "socketio-jwt": "^4.5.0",
    "strat-ego-common": "github:klemensas/strat-ego-common",
    "uws": "^9.14.0"
  },
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/jest": "^22.2.3",
    "@types/knex": "^0.14.10",
    "@types/lolex": "^2.1.2",
    "@types/node": "^8.10.8",
    "@types/seedrandom": "^2.4.27",
    "@types/socket.io": "^1.4.31",
    "jest": "^22.4.3",
    "lolex": "^2.3.2",
    "nodemon": "^1.12.1",
    "ts-jest": "^22.4.3",
    "ts-node": "^5.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  }
}
